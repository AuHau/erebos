{
  "name": "erebos",
  "version": "0.1.0",
  "description": "Swarm and PSS client",
  "repository": "git@github.com:MainframeHQ/erebos.git",
  "license": "MIT",
  "main": "lib/index.js",
  "browser": "dist/erebos.min.js",
  "files": ["dist/*", "lib/*"],
  "scripts": {
    "clean": "del dist && del lib",
    "build:cjs":
      "cross-env BABEL_ENV=node babel src --out-dir lib --ignore web.js",
    "build:flow": "flow-copy-source src lib --ignore *.web.js",
    "build:umd": "cross-env BABEL_ENV=rollup NODE_ENV=development rollup -c",
    "build:umd:min": "cross-env BABEL_ENV=rollup NODE_ENV=production rollup -c",
    "build":
      "yarn clean && yarn build:cjs && yarn build:flow && yarn build:umd && yarn build:umd:min",
    "test": "flow check",
    "start": "yarn test && yarn build",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "node-fetch": "^2.0.0",
    "rx-socket": "^0.2.0",
    "rxjs": "^5.5.6",
    "ws": "^4.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-class-properties": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "cross-env": "^5.1.3",
    "del-cli": "^1.1.0",
    "flow-bin": "^0.66.0",
    "flow-copy-source": "^1.3.0",
    "rollup": "^0.56.3",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0"
  }
}

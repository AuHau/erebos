{
  "name": "erebos-project",
  "version": "0.9.0",
  "description": "Swarm client and tools",
  "repository": "git@github.com:MainframeHQ/erebos.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean -y && del ./node_modules",
    "lint": "eslint 'packages/*/src/**.ts' '__tests__/**.ts'",
    "lint:fix": "yarn lint --fix",
    "test": "jest --config jest.config.js",
    "test:all": "yarn lint && yarn test",
    "test:ci": "jest --ci --config jest.config.ci.js --runInBand",
    "build": "lerna run build",
    "start": "yarn build && yarn test:all"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.18",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.4.0",
    "eslint-config-mainframe": "^4.0.1",
    "jest": "^24.9.0",
    "jest-fetch-mock": "^2.1.2",
    "jest-puppeteer": "^4.3.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "puppeteer": "^1.20.0",
    "ts-jest": "^24.1.0",
    "typescript": "3.6.3"
  }
}
